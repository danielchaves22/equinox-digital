{
  "name": "zenit-monorepo",
  "private": true,
  "workspaces": [
    "core-backend",
    "core-frontend",
    "zenit-backend",
    "zenit-frontend"
  ],
  "scripts": {
    "dev:core-backend": "pnpm --filter core-backend dev",
    "dev:core-frontend": "pnpm --filter core-frontend dev",
    "dev:zenit-backend": "pnpm --filter zenit-backend dev",
    "dev:zenit-frontend": "pnpm --filter zenit-frontend dev",
    "dev:all": "pnpm -r dev"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "prisma",
      "@prisma/engines",
      "bcrypt",
      "esbuild",
      "sharp",
      "@scarf/scarf"
    ]
  }
}