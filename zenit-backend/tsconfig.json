{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "rootDir": "src",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "moduleResolution": "Node",
      "skipLibCheck": true,
      "baseUrl": ".",
      "typeRoots": [
        "./node_modules/@types",
        "./src/@types"
      ]
    },
    "include": [
      "src"
    ]
  }